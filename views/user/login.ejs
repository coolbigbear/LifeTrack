<%- include('../partials/header.ejs') %>
<h2>Login!</h2>
<form method="POST" action="/auth/login">

    <%- include('../partials/errors.ejs', { errors: errors, attribute: 'General'}) %>

    <div class="form-group">
        <%- include('../partials/errors.ejs', { errors: errors, attribute: 'Email'}) %>
        <label for="nameField">Email</label>
        <input class="form-control" type="email" name="email" />
    </div>

    <div class="form-group">
        <%- include('../partials/errors.ejs', { errors: errors, attribute: 'Password'}) %>
        <label for="nameField">Password</label>
        <input class="form-control" type="password" name="password" />
    </div>
    <input type="submit" class="btn btn-primary" value="Login!" />
</form>
<%- include('../partials/footer.ejs') %>